<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#aaaaaa" >
	
    <!--  宽比高  27:48 = 1080:1920 边距50dp -->
    <com.example.clipphotolib.classphoto.ClipImageLayout
        android:id="@+id/id_clipImageLayout"
        app:clip_padding="60dp"
        app:clip_widthRatio="16"
        app:clip_heightRatio="9"
        app:clip_borderWidth="3"
        app:clip_borderColor="#F10180"
        app:clip_shadowColor="#00000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </com.example.clipphotolib.classphoto.ClipImageLayout>

    <Button
        android:id="@+id/bt_photo_cancle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:text="舍弃"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_photo_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:text="选取"
        android:textColor="@color/white" />

</RelativeLayout>